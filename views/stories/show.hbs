  
<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate story.createdAt 'DD/MM/YYYY, HH:mm'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">Mais sobre {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
     <div class="col s12 m8">
        <h3>Comente</h3>
        <div class="col-md-6">
    		<div class="widget-area no-padding blank">
				<div class="status-upload">
					<form action="/stories/{{story._id}}/comment" method="POST">
						<textarea placeholder="Escreva aqui seu comentário" name="body" id="body"></textarea>
					    <button type="submit" class="btn btn-success green" style="float: right;"><i class="fa fa-share"></i> Comentar</button>
                    </form>
				</div>
			</div>
		</div>
        
    </div>
    </div>
    <div class="col s12 m12">
        <h3>Comentários</h3>
        <ul>
            {{#each comments}}
                <li>
                    <div class="card story">
                        <div class="card-content">
                            <div class="row">
                                <div class="col s12 m8">
                                    {{{body}}}
                                </div>
                                <div style="text-align: right;" class="col s12 m4">
                                    <span class="card-title">{{formatDate createdAt 'DD/MM/YYYY, HH:mm'}}</span>
                                    <span class="card-title">{{user.displayName}}</span>
                                    <img src="{{user.image}}" class="circle responsive-img img-small pull-right">
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            {{else}}
                <p>Sem comentarios ainda nessa história</p>
            {{/each}}
        </ul>
    </div>
</div>